<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_bar_color"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:orientation="horizontal"
                android:paddingRight="16dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/notification_rounded_corners_border"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_notifications_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Notification"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold|italic"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_color"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@color/base_color">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight=".4">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/status_bar_color"
                android:layout_marginVertical="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        app:strokeWidth="2dp"
                        android:padding="3dp"
                        app:shapeAppearanceOverlay="@style/corner"
                        app:strokeColor="@color/status_bar_color"
                        android:src="@drawable/tennis"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23sp"
                        android:textColor="@color/status_bar_color"
                        android:text="Fhilip Martins"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="Bemor raqami: "
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="+9989xxxxxxxx" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Chaqiruv holati:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/status_bar_color"
                            android:text="Juda og`ir"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/status_bar_color"
                android:layout_marginVertical="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:text="45 yosh"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/status_bar_color"
                            android:text="65"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/status_bar_color"
                            android:text="kg"/>

                        <LinearLayout
                            android:layout_width=".5dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="3dp"
                            android:background="@color/status_bar_color"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/status_bar_color"
                            android:text="1.61"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/status_bar_color"
                            android:text="m"/>

                        <LinearLayout
                            android:layout_width=".5dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="3dp"
                            android:background="@color/status_bar_color"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".2">
                <LinearLayout
                    android:id="@+id/ln_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/background_rounded_corners_left"
                    android:backgroundTint="@color/white"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_home_black"/>

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginTop="3dp"
                        android:text="Home"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/helper_text_color"
                    tools:ignore="Suspicious0dp" />

                <LinearLayout
                    android:id="@+id/ly_clock"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/img_clock"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/clock"/>

                    <TextView
                        android:id="@+id/tv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/status_bar_color"
                        android:text="Chaqiruv\nvaqtlari"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/helper_text_color"
                    tools:ignore="Suspicious0dp" />

                <LinearLayout
                    android:id="@+id/ll_inspection"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/background_rounded_corners_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/img_inspection"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/doctors"/>

                    <TextView
                        android:id="@+id/tv_inspection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:text="Tekshiruv"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/status_bar_color"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/helper_text_color"
                    tools:ignore="Suspicious0dp" />

                <LinearLayout
                    android:id="@+id/ll_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/background_rounded_corners_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/img_diagnosis"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/diagnosis"/>

                    <TextView
                        android:id="@+id/tv_diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="3dp"
                        android:textStyle="normal"
                        android:text="Tashxis"
                        android:textColor="@color/status_bar_color"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/helper_text_color"
                    tools:ignore="Suspicious0dp" />

                <LinearLayout
                    android:id="@+id/ll_drugs"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:background="@drawable/background_rounded_corners_left"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/img_drugs"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/medicine"/>

                    <TextView
                        android:id="@+id/tv_drugs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:text="Dorilar\nro`yxati"
                        android:textColor="@color/status_bar_color"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/helper_text_color"
                    tools:ignore="Suspicious0dp" />

            </LinearLayout>
<!--            <androidx.viewpager.widget.ViewPager-->
<!--                android:id="@+id/viewpager"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:backgroundTint="@color/white"-->
<!--                android:background="@drawable/background_rounded_corners_viewpager"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:layout_weight="1"-->
<!--                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>-->

            <androidx.fragment.app.FragmentContainerView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/background_rounded_corners_viewpager"
                android:layout_marginRight="20dp"
                android:id="@+id/fragmentContainer"/>
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>